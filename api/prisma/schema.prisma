generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  name          String
  password_hash String
  createdAt     DateTime @default(now())

  @@map("users")
}

enum Filter {
  Lab_Línguas
  Lab_Informática
  Lab_Hardware
}


enum ItemType {
  Component
  Computer
  Notebook
  Materials
  Cables
}
model Item {
  id     String   @id @default(uuid())
  code   String   @unique
  name   String
  amount Int
  type   ItemType
  filter Filter

  @@map("items")
}
